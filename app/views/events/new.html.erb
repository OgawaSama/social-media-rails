<div class="max-w-2xl mx-auto mt-12 bg-white shadow-lg rounded-lg p-8 border border-gray-100">
  <h1 class="text-3xl font-bold text-center text-blue-600 mb-2">
    <%= @business_address ? "Novo Evento Comercial" : "Novo Rolê (When2Meet)" %>
  </h1>
  
  <% unless @business_address %>
    <p class="text-center text-gray-500 mb-8">Defina as datas e deixe seus amigos escolherem o melhor horário.</p>
  <% end %>

  <%= form_with(model: @event, local: true, class: "space-y-6") do |form| %>
    
    <%# Mostra erros se houver %>
    <% if @event.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded">
        <p class="font-bold text-red-700">Corrija os erros abaixo:</p>
        <ul class="list-disc list-inside text-red-600 mt-1">
          <% @event.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">
      <div>
        <%= form.label :name, "Nome do Evento", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Ex: Churrasco da Turma" %>
      </div>

      <div>
        <%= form.label :description, "Descrição", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= form.text_area :description, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :start_time, "Data de Início", class: "block text-sm font-bold text-gray-700 mb-1" %>
          <%= form.date_field :start_time, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.label :end_time, "Data de Término", class: "block text-sm font-bold text-gray-700 mb-1" %>
          <%= form.date_field :end_time, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
      
      <%# Campos extras apenas para Business %>
      <% if @business_address %>
        <div>
          <%= form.label :points_rewarded, "Pontos de Recompensa", class: "block text-sm font-bold text-gray-700 mb-1" %>
          <%= form.number_field :points_rewarded, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
        </div>
      <% end %>
    </div>

    <div class="pt-4">
      <%= form.submit (@business_address ? "Criar Evento" : "Gerar Horários"), class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg shadow transition duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>