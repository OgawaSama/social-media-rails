<h2 class="text-xl font-bold mb-4">Novo Evento</h2>
<%= form_with model: [@business_address, @event], url: business_business_address_events_path(@business_address.business, @business_address) do |f| %>
  <div class="mb-2">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name, class: "border p-1 rounded w-full" %>
  </div>
  <div class="mb-2">
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description, class: "border p-1 rounded w-full" %>
  </div>
  <div class="mb-2">
    <%= f.label :start_time, "Início" %><br>
    <%= f.datetime_select :start_time, class: "border p-1 rounded" %>
  </div>
  <div class="mb-2">
    <%= f.label :end_time, "Fim" %><br>
    <%= f.datetime_select :end_time, class: "border p-1 rounded" %>
  </div>
  <div class="mb-2">
    <%= f.label :points_rewarded, "Pontos (opcional)" %><br>
    <%= f.number_field :points_rewarded, class: "border p-1 rounded" %>
  </div>
  <div>
    <%= f.submit "Criar Evento", class: "bg-green-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
