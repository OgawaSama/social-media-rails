<%= form_with url: search_users_path, method: :get, local: true do |f| %>
  <div class="flex items-center mt-4 space-x-2">
    <!-- Campo de busca ocupa todo o espaço restante -->
    <%= f.text_field :query,
          placeholder: "Search users...",
          class: "flex-1 border rounded p-2" %>

    <!-- Botão de Search -->
    <%= f.submit "Search",
          class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>

    <!-- Botão Show User List -->
    <%= button_to "Show user list",
          userindex_path,
          method: :get,
          class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  </div>
<% end %>

<div class="fle flex-col items-center pt-24">
    <h1>My Feed</h1>

    <div class="mt-6 max-w-2xl w-full mx-auto flex items-center justify-between">
        <%= link_to "Create new post", new_post_path %>
    </div>

    <% if @posts.any? %>
      <div class="max-w-5xl w-full grid gap-8 mt-8">
          <%= render partial: "post", collection: @posts %>
      </div>
    <% else %>
      <h3>
        Vazio aqui... Comece a seguir alguém para ver posts no seu feed!
      </h3>
    <% end %>
</div>