<div class="max-w-4xl mx-auto mt-8 px-4">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Grupos de <%= @user.username %></h1>
    <%= link_to "Novo grupo", new_group_path, class: "bg-green-500 hover:bg-green-600 text-white font-semibold px-4 py-2 rounded shadow transition duration-200" %>
  </div>

  <% if @user.groups.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <% @user.groups.each do |group| %>
        <%= link_to group_path(group) do %>
          <div class="flex items-center">
            <% if group.avatar.attached? %>
              <%= image_tag(group.avatar, class: "w-10 h-10 rounded-full object-cover") %>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-gray-600 font-semibold">
                <%= group.name[0].upcase %>
              </div>
            <% end %>
            <div class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition-shadow duration-200">
              <h2 class="text-lg font-semibold text-blue-600 hover:underline" ">
                <%= group.name %>
              </h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">NÃ£o possui grupos ainda.</p>
  <% end %>
</div>
