<div class="max-w-5xl mx-auto mt-8 px-4">
  <h1 class="text-2xl font-bold mb-6"><%= @user.username %> está seguindo</h1>

  <% if @following.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <% @following.each do |user| %>
        <div class="bg-white shadow-md rounded-lg p-4 flex flex-col items-center">
          <h5 class="text-lg font-semibold mb-2"><%= user.username %></h5>

          <% if user.profile %>
            <%= link_to "Ver Perfil", profile_path(user.profile), 
                        class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded shadow transition duration-200 text-sm" %>
          <% else %>
            <span class="text-gray-500 text-sm">Perfil não disponível</span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">Não está seguindo ninguém ainda.</p>
  <% end %>

  <%# Voltar sempre para o perfil do usuário %>
  <div class="mt-6">
    <%= link_to "Voltar para Perfil", profile_path(@user.profile), 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-4 py-2 rounded shadow transition duration-200" %>
  </div>
</div>
