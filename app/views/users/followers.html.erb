<div class="max-w-5xl mx-auto mt-8 px-4">
  <h1 class="text-2xl font-bold mb-6">Seguidores de <%= @user.username %></h1>

  <% if @followers.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-7">
      <% @followers.each do |follower| %>
        <div class="bg-white shadow-md rounded-lg p-4 flex flex-col items-center">
          <div class="flex flex-lin-3 gap-4">
            <% if follower.profile.avatar.attached? %>
              <%= image_tag(follower.profile.avatar, class: "w-10 h-10 rounded-full object-cover") %>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-gray-600 font-semibold">
                <%= follower.username[0].upcase %>
              </div>
            <% end %>
            <h5 class="text-lg font-semibold mb-2"><%= follower.username %></h5>
            
            <% if follower.profile %>
              <%= link_to "Ver Perfil", profile_path(follower.profile), 
                class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded shadow transition duration-200 text-sm" %>
            <% else %>
              <span class="text-gray-500 text-sm">Perfil não disponível</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">Nenhum seguidor ainda.</p>
  <% end %>

  <%# Voltar sempre para o perfil do usuário %>
  <div class="mt-6">
    <%= link_to "Voltar para Perfil", profile_path(@user.profile), 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-4 py-2 rounded shadow transition duration-200" %>
  </div>
</div>