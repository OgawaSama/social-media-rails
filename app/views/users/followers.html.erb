<div class="container mt-4">
  <h1>Seguidores de <%= @user.username %></h1>
  
  <% if @followers.any? %>
    <div class="row">
      <% @followers.each do |follower| %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= follower.username %></h5>
              <% if follower.profile %>
                <%= link_to "Ver Perfil", profile_path(follower.profile), class: "btn btn-primary btn-sm" %>
              <% else %>
                <span class="text-muted">Perfil não disponível</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">Nenhum seguidor ainda.</p>
  <% end %>
  
  <!-- CORREÇÃO: Voltar sempre para o perfil do usuário -->
  <%= link_to "Voltar para Perfil", profile_path(@user.profile), class: "btn btn-secondary mt-3" %>
</div>
