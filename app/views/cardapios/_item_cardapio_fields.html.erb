<div class="item-cardapio flex space-x-2 mt-2 w-auto">
  <%= f.hidden_field :_destroy %>
  <%= f.text_field :nome, placeholder: "Nome do item", class: "input border rounded p-2 flex-1" %>
  <%= f.number_field :preco, placeholder: "Preço", class: "input border rounded p-2 flex-2", step: 0.01 %>
  <%= f.select :tipo, [["Comida", 0], ["Bebida", 1]], {}, class: "input border rounded p-2 flex-3" %>
  <%= f.number_field :worth, placeholder: "Pontuação", class: "input border rounded p-2 flex-4", step: 1 %>
  <button type="button" class="remove-item bg-red-500 text-white px-2 rounded">Remover</button>
</div>
