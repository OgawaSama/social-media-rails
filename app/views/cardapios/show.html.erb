<h2 class="text-2xl font-bold mb-4">Cardápio: <%= @cardapio.titulo %></h2>

<ul class="list-disc ml-6 space-y-2">
  <% @itens.each do |item| %>
    <li>
      <%= item.nome %> - R$ <%= number_with_precision(item.preco, precision: 2, separator: ",") %> (<%= item.tipo == 0 ? "Comida" : "Bebida" %>)
    </li>
  <% end %>
</ul>

<% if current_user == @business_address.business.user %>
  <%= link_to "Editar Cardápio", edit_business_business_address_cardapio_path(@business_address.business, @business_address), class: "bg-yellow-500 text-white px-4 py-2 rounded mt-4 inline-block" %>
<% end %>
