<% content_for :title, "Editing group" %>

<h1 class="text-3xl font-bold mb-6 text-center">Editing Group</h1>

<div class="max-w-3xl mx-auto bg-white shadow-md rounded-lg p-6 mb-6">
  <%= render "form", group: @group %>
</div>

<div class="flex justify-center gap-4">
  <%= link_to "Show this group", @group, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium px-4 py-2 rounded shadow transition duration-200" %>
  <%= link_to "Back to groups", groups_user_path(current_user), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium px-4 py-2 rounded shadow transition duration-200" %>
</div>