<%= form_with(model: group, local: true, class: "space-y-8") do |form| %>

  <% if group.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2"><%= pluralize(group.errors.count, "error") %> proibiu este grupo de ser salvo:</h2>
      <ul class="list-disc list-inside space-y-1">
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :bio, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.rich_text_area :bio, direct_upload: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-2">
    <%= form.label :header, class: "block text-gray-700 font-medium mb-2" %>
    <label class="inline-block bg-gray-100 border border-gray-300 rounded px-3 py-2 cursor-pointer hover:bg-gray-200">
      Escolher arquivo
      <%= form.file_field :header, direct_upload: true, class: "hidden" %>
    </label>
  </div>

  <div class="mb-2">
    <%= form.label :avatar, class: "block text-gray-700 font-medium mb-2" %>
    <label class="inline-block bg-gray-100 border border-gray-300 rounded px-3 py-2 cursor-pointer hover:bg-gray-200">
      Escolher arquivo
      <%= form.file_field :avatar, direct_upload: true, class: "hidden" %>
    </label>
  </div>

  <div>
    <%= form.submit "Confirmar", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow transition duration-200" %>
  </div>
<% end %>
