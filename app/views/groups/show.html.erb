<% if notice %>
  <p class="text-green-600 font-medium mb-4"><%= notice %></p>
<% end %>

<div class="bg-white shadow-md rounded-lg p-6 mb-6">
  <%= render @group %>
</div>

<div class="flex flex-wrap gap-4 mb-6 p-6">
  <%= link_to "Edit this group", edit_group_path(@group), class: "bg-blue-500 hover:bg-blue-600 text-white font-medium px-4 py-2 rounded shadow transition duration-200" %>
  <%= link_to "Back to feed", feed_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium px-4 py-2 rounded shadow transition duration-200" %>
  <%= button_to "Destroy this group", @group, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-medium px-4 py-2 rounded shadow transition duration-200" %>
</div>

<div class="max-w-5xl mx-auto w-full mt-8 grid gap-8">
  <% if @posts.any? %>
    <h3 class="text-xl font-semibold mb-4">Posts de membros do grupo</h3>
    <%= render partial: "feed/post", collection: @posts %>
  <% else %>
    <p class="text-gray-500">Nenhum post ainda.</p>
  <% end %>
</div>
