<h1 class="text-2xl font-bold mb-6">Resumo geral de itens consumidos</h1>

<table class="min-w-full border">
  <thead>
    <tr>
      <th class="border px-2 py-1">Nome</th>
      <th class="border px-2 py-1">Marca</th>
      <th class="border px-2 py-1">Tipo</th>
      <th class="border px-2 py-1">Quantidade Total</th>
    </tr>
  </thead>

  <tbody>
    <% @summary.each do |item| %>
      <tr>
        <td class="border px-2 py-1"><%= item.name %></td>
        <td class="border px-2 py-1"><%= item.brand %></td>
        <td class="border px-2 py-1"><%= item.item_type %></td>
        <td class="border px-2 py-1 font-semibold"><%= item.total_quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
