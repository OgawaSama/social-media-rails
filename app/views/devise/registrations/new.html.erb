<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-blue-600 mb-8">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-1">
        <%= f.label :username, class: "block text-gray-700 font-medium" %>
        <%= f.text_field :username, autofocus: true, maxlength: 20, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :first_name, class: "block text-gray-700 font-medium" %>
        <%= f.text_field :first_name, maxlength: 30, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :surnames, class: "block text-gray-700 font-medium" %>
        <%= f.text_field :surnames, maxlength: 50, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :password, class: "block text-gray-700 font-medium" %>
        <% if @minimum_password_length %>
          <em class="text-gray-500 text-sm">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", maxlength: 128, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
      </div>

      <div class="space-y-1">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", maxlength: 128, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg shadow-lg transition duration-200 text-lg" %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
