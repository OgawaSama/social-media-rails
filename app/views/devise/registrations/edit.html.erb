<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-blue-600 mb-8">
      Edit <%= resource_name.to_s.humanize %>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-1">
        <%= f.label :username, class: "block text-gray-700 font-medium" %>
        <%= f.text_field :username, autofocus: true, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :first_name, class: "block text-gray-700 font-medium" %>
        <%= f.text_field :first_name, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :surnames, class: "block text-gray-700 font-medium" %>
        <%= f.text_field :surnames, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="space-y-1">
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-500 mb-2">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="space-y-1">
        <%= f.label :password, class: "block text-gray-700 font-medium" %>
        <em class="text-gray-500 text-sm">(leave blank if you don't want to change it)</em>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
        <% if @minimum_password_length %>
          <em class="text-gray-500 text-sm"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
      </div>

      <div class="space-y-1">
        <%= f.label :current_password, class: "block text-gray-700 font-medium" %>
        <em class="text-gray-500 text-sm">(we need your current password to confirm your changes)</em>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
      </div>

      <div>
        <%= f.submit "Update", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg shadow-lg transition duration-200 text-lg" %>
      </div>
    <% end %>

    <h3 class="text-lg font-semibold text-gray-700 mt-6 mb-2">Cancel my account</h3>
    <div class="mb-6">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded shadow-lg transition duration-200" %>
    </div>

    <div class="text-center">
      <%= link_to "Back", :back, class: "text-gray-500 hover:text-gray-700" %>
    </div>
  </div>
</div>
