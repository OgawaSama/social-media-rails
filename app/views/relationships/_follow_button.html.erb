<div id="follow-button-<%= user.id %>">
  <% if current_user.following?(user) %>
    <%= button_to "Unfollow", unfollow_user_path(user), 
                  method: :delete, 
                  class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded-lg shadow transition duration-200",
                  form: { data: { turbo_stream: true } } %>
  <% else %>
    <%= button_to "Follow", follow_user_path(user), 
                  method: :post, 
                  class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded-lg shadow transition duration-200",
                  form: { data: { turbo_stream: true } } %>
  <% end %>
</div>
