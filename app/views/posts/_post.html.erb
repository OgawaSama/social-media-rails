<div class="flex items-center gap-6">
  <% if post.user.profile.avatar.attached? %>
    <%= image_tag(post.user.profile.avatar, class: "w-10 h-10 rounded-full object-cover") %>
  <% else %>
    <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-gray-600 font-semibold">
      <%= post.user.username[0].upcase %>
    </div>
  <% end %>
  <span class="text-lg text-gray-700 font-bold"><%= post.user.username %></span>
  <span class="text-gray-500 text-sm"><%= time_ago_in_words(post.created_at) %> ago</span>
</div>

<div id="<%= dom_id post %>" class="bg-white shadow-md rounded-lg p-6 mb-6">
  <strong class="block text-lg font-semibold text-gray-800 mb-2">
    <%= post.caption %>
  </strong>

  <p class="text-gray-700 mb-4">
    <%= post.body %>
  </p>

  <% if post.images.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <% post.images.each do |image| %>
        <%= image_tag image, class: "w-full h-auto rounded-lg object-cover" %>
      <% end %>
    </div>
  <% end %>
</div>
