<% content_for :title, "Editing post" %>

<div class="min-h-screen flex flex-col items-center bg-gray-50 py-12">
  <h1 class="text-3xl font-bold text-blue-600 mb-8">Editing post</h1>

  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-lg mb-6">
    <%= render "form", post: @post %>
  </div>

  <div class="flex gap-4">
    <%= link_to "Show this post", @post, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded shadow transition duration-200" %>
    <%= link_to "Back to feed", feed_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-4 py-2 rounded shadow transition duration-200" %>
  </div>
</div>