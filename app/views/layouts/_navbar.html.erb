<nav class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">

      <!-- Logo / Greeting -->
      <div class="text-lg font-semibold text-gray-700">
        Olá, <%= current_user.username %>
      </div>

      <!-- Links como "cards" à direita -->
      <div class="flex space-x-4">
        <%= link_to feed_path, class: "bg-white shadow-md rounded-lg px-4 py-2 hover:bg-gray-100 transition duration-200 font-medium text-gray-700 flex items-center" do %>
          Home
        <% end %>

        <%= link_to profile_path(id: current_user.profile.id, trailing_slash: true), method: :get, class: "bg-white shadow-md rounded-lg px-4 py-2 hover:bg-gray-100 transition duration-200 font-medium text-gray-700 flex items-center" do %>
          My Profile
        <% end %>

        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-white shadow-md rounded-lg px-4 py-2 hover:bg-red-50 transition duration-200 font-medium text-red-500 hover:text-red-700 flex items-center" do %>
          Sign Out
        <% end %>
      </div>

    </div>
  </div>
</nav>